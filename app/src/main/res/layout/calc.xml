<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_rowWeight="6"
    android:layout_columnWeight="4"
    android:columnCount="4"
    android:rowCount="6"
    tools:context=".Calc">

    <TextView
        android:id="@+id/tvTotal"
        style="@style/Apptheme.BotonCalculadora.Total"
        android:text="Total"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_columnSpan="4"/>

    <TextView
        android:id="@+id/tvC"
        android:tag="C"
        style="@style/Apptheme.BotonCalculadora.Rojo"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_marginRight="1dp"
        android:text="C"
        android:onClick="pulsar"/>
    <TextView
        android:id="@+id/sing_delete"
        android:tag="D"
        style="@style/Apptheme.BotonCalculadora.Rojo"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_columnSpan="1"
        android:layout_gravity="fill_vertical"
        android:layout_marginLeft="0dp"
        android:paddingLeft="31dp"
        android:paddingRight="31dp"
        android:text=""
        android:drawableLeft="@drawable/ic_delete"
        android:onClick="pulsar"/>
    <TextView
        android:id="@+id/numero7"
        android:tag="7"
        style="@style/Apptheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="7"
        android:onClick="pulsar"/>
    <TextView
        android:id="@+id/numero8"
        android:tag="8"
        style="@style/Apptheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:text="8"
        android:onClick="pulsar"/>
    <TextView
        android:id="@+id/numero9"
        android:tag="9"
        style="@style/Apptheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="2"
        android:text="9"
        android:onClick="pulsar"/>

    <!--Segunda fila de numeros 4 5 6-->
    <TextView
        android:id="@+id/numero4"
        android:tag="4"
        style="@style/Apptheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:text="4"
        android:onClick="pulsar"/>
    <TextView
        android:id="@+id/numero5"
        android:tag="5"
        style="@style/Apptheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:text="5"
        android:onClick="pulsar"/>
    <TextView
        android:id="@+id/numero6"
        android:tag="6"
        style="@style/Apptheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="3"
        android:text="6"
        android:onClick="pulsar"/>

    <!--Segunda fila de numeros 1 2 3-->

    <TextView
        android:id="@+id/numero1"
        android:tag="1"
        style="@style/Apptheme.BotonCalculadora.Azul"

        android:layout_column="0"
        android:layout_row="4"
        android:text="1"
        android:onClick="pulsar"/>
    <TextView
        android:id="@+id/numero2"
        android:tag="2"
        style="@style/Apptheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:text="2"
        android:onClick="pulsar"/>
    <TextView
        android:id="@+id/numero3"
        android:tag="3"
        style="@style/Apptheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="4"
        android:text="3"
        android:onClick="pulsar"/>

    <TextView
        android:id="@+id/punto"
        android:tag="."
        style="@style/Apptheme.BotonCalculadora.Azul"
        android:layout_gravity="fill_horizontal"
        android:layout_column="0"
        android:layout_row="5"
        android:gravity="center_horizontal"
        android:text="."
        android:onClick="pulsar"/>
    <TextView
        android:id="@+id/cero"
        android:tag="0"
        style="@style/Apptheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="5"
        android:text="0"
        android:onClick="pulsar"/>
    <TextView
        android:id="@+id/signo_igual"
        android:tag="="
        style="@style/Apptheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="5"
        android:text="="
        android:onClick="pulsar"/>
    <TextView
        android:id="@+id/signo_dividir"
        android:tag="/"
        style="@style/Apptheme.BotonCalculadora.Rojo"
        android:layout_gravity="fill"
        android:layout_column="3"
        android:layout_row="1"
        android:layout_columnSpan="1"
        android:text="/"
        android:onClick="pulsar"/>
    <TextView
        android:id="@+id/signo_multiplicar"
        android:tag="*"
        style="@style/Apptheme.BotonCalculadora.Rojo"
        android:layout_gravity="fill"
        android:gravity="center"
        android:layout_column="3"
        android:layout_row="2"
        android:layout_marginTop="1dp"
        android:text="*"
        android:onClick="pulsar"/>
    <TextView
        android:id="@+id/signo_resta"
        android:tag="-"
        style="@style/Apptheme.BotonCalculadora.Rojo"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:layout_column="3"
        android:layout_row="3"
        android:layout_marginTop="1dp"
        android:text="-"
        android:onClick="pulsar"/>
    <TextView
        android:id="@+id/signo_sum"
        android:tag="+"
        style="@style/Apptheme.BotonCalculadora.Rojo"
        android:layout_gravity="fill"
        android:gravity="center"
        android:layout_column="3"
        android:layout_row="4"
        android:layout_rowSpan="2"
        android:layout_marginTop="1dp"
        android:text="+"
        android:onClick="pulsar"/>

</GridLayout>
